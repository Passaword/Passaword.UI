@using System.Security.Claims
@model SecretRetrieveModel
@{
    ViewData["Title"] = "Fetch a Secret";
}

<h1>Fetch Your Secret</h1>

<form asp-action="Secret" method="post">
    <input asp-for="Id" type="hidden"/>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Passphrase" class="control-label">Passphrase (if you were given one)</label>
                <input asp-for="Passphrase" class="form-control"/>
                <span asp-validation-for="Passphrase"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Get Secret</button>
    </div>
</form>

<div class="alert alert-success hidden">
    <label for="secret" class="control-label">Shh, your secret is shown below. This will only show once:</label>
    <input id="secret" type="text" class="form-control" value=""/>
</div>

<div class="alert alert-danger hidden">
    <strong>Decryption of your secret failed</strong>
</div>

@section scripts {
    <script src="~/js/secret.js"></script>
    @Html.Partial("_ValidationScriptsPartial")
}